// requests/update-user.bru
meta {
  name: Update User
  type: http
  seq: 3
}

put {
  url: {{base_url}}/api/users/{{user_id}}
  body: json
  auth: bearer
}

auth:bearer {
  token: {{api_key}}
}

body:json {
  {
    "name": "John Updated",
    "email": "john.updated@example.com"
  }
}

tests {
  test("Status should be 200", function() {
    expect(res.status).to.equal(200);
  });
  
  test("User should be updated", function() {
    expect(res.body.name).to.equal('John Updated');
  });
}
